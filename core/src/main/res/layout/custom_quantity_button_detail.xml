<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@drawable/quantity_shadow_detail"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="201dp"
        android:layout_height="50dp"

        app:cardBackgroundColor="@color/white"
        app:strokeWidth="0dp"

        app:cardCornerRadius="8dp"

        xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/btn_minus"
                android:layout_width="67dp"
                android:background="@drawable/shape_bg_ripple"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cvQuantity"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_junk_quantity"
                android:visibility="visible"
                android:layout_height="50dp">
            </ImageView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvQuantity"
                android:layout_width="67dp"
                app:layout_constraintEnd_toStartOf="@+id/btn_plus"
                app:layout_constraintStart_toEndOf="@+id/btn_minus"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="@color/color_primary"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tvQuantity"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"

                    app:layout_constraintEnd_toStartOf="@+id/btn_plus"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="1"
                   >
                </TextView>
            </com.google.android.material.card.MaterialCardView>



            <ImageView
                android:id="@+id/btn_plus"
                android:layout_width="67dp"
                android:padding="16dp"
                android:background="@drawable/shape_bg_ripple"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintStart_toEndOf="@+id/cvQuantity"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_plus_quantity"
                android:visibility="visible"
                android:layout_height="50dp">
                >
            </ImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</FrameLayout>
